{
    "parserOptions": {
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "jsx": true,
            "arrowFunctions": true,
            "templateStrings": true
        },
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "settings": {
        "react": {
            "version": "16.2"
        }
    },
    "plugins": [
        "react",
        "simple-import-sort"
    ],
    "extends": [
        "standard-jsx"
    ],
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-no-bind": [
            "error",
            {
                "allowArrowFunctions": true,
                "allowBind": false,
                "ignoreRefs": true
            }
        ],
        "react/no-did-update-set-state": "error",
        "react/no-unknown-property": "error",
        "react/no-unused-prop-types": "error",
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "error",
        "react/jsx-tag-spacing": "off",
        "react/jsx-handler-names": "off",
        "react/jsx-indent": [
            "error",
            2
        ],
        "react/jsx-indent-props": "off",
        "no-extra-semi": "error",
        "react/jsx-boolean-value": "off",
        "jsx-quotes": [
            "warn",
            "prefer-double"
        ],
        "simple-import-sort/sort": "error",
        "sort-imports": "off"
    }
}